<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="zy.com.cn.demo.take.task.mapper.FoodCategoryMapper">
    <resultMap id="BASE_RESULT_MAP" type="zy.com.cn.demo.take.task.model.FoodCategory">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="created_by" property="createdBy" jdbcType="VARCHAR"/>
        <result column="created_date" property="createdDate" jdbcType="TIMESTAMP"/>
        <result column="deleted_flag" property="deletedFlag" jdbcType="VARCHAR"/>
    </resultMap>
    <sql id="BASE_TABLE">
      sicily_food_category
    </sql>
    <sql id="BASE_COLUMN">
        id,name,created_by,created_date,deleted_flag
    </sql>
    <insert id="insertRecord" parameterType="zy.com.cn.demo.take.task.model.FoodCategory">
        <!-- 返回主键 -->
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert  into  <include refid="BASE_TABLE"/>
        <trim prefix="(" suffix=")" suffixOverrides=",">
            name,created_by,created_date,deleted_flag
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            #{name, jdbcType=VARCHAR},
            #{createdBy, jdbcType=VARCHAR},
            NOW(),
            'N'
        </trim>
    </insert>
    <update id="updateRecord" parameterType="zy.com.cn.demo.take.task.model.FoodCategory">
      update <include refid="BASE_TABLE"/>
        <set>
            <if test="name != null and name != ''">
                name = #{name, jdbcType=VARCHAR},
            </if>
            <if test="deletedFlag != null ">
                deleted_flag = #{deletedFlag, jdbcType=VARCHAR},
            </if>
        </set>
      where  id = #{id, jdbcType=INTEGER}
    </update>
    <select id="listRecord" parameterType="zy.com.cn.demo.take.task.model.FoodCategory" resultMap="BASE_RESULT_MAP">
        select <include refid="BASE_COLUMN"/>
        from <include refid="BASE_TABLE"/>
        where  deleted_flag = 'N'
        <if test="id != null">
            and id = #{id, jdbcType=INTEGER}
        </if>
        <if test="name != null and name != ''">
            and name like concat('%', #{name, jdbcType=VARCHAR}, '%')
        </if>
    </select>

</mapper>